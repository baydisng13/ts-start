{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": ".grammy"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
